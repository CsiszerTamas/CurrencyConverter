<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_currency_converter"
    app:startDestination="@id/rates_fragment">

    <fragment
        android:id="@+id/rates_fragment"
        android:name="com.cst.currencyconverter.ui.rates.RatesFragment"
        android:label="Rates Fragment"
        tools:layout="@layout/fragment_rates">
        <action
            android:id="@+id/action_rates_fragment_to_about_fragment"
            app:destination="@id/about_fragment" />
    </fragment>

    <fragment
        android:id="@+id/about_fragment"
        android:name="com.cst.currencyconverter.ui.about.AboutFragment"
        android:label="About Fragment"
        tools:layout="@layout/fragment_about" />

</navigation>